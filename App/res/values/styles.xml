<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Holo Theme Overrides -->
    <style name="Base"/>

    <style name="Base.ProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="Base.ListView" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="Base.ButtonBar">
        <item name="android:background">@null</item>
        <item name="android:divider">?android:dividerVertical</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:dividerPadding">12dip</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="Base.Button">
        <item name="android:background">@drawable/btn_default_holo_light</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Base.Button.Borderless">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
    </style>

    <style name="Base.FormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Base.FormField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Base.BottomBar"/>

    <style name="Base.BottomBar.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:background">@drawable/icon_selector</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Base.BulletIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/icon_selector</item>
    </style>

    <style name="Base.BulletItem">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bullet_item</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Base.TitleIndicator">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TitleText" parent="android:TextAppearance.Medium">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?attr/doz__textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText">
        <item name="android:textColor">?attr/doz__textColorPrimary</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_marginTop">@dimen/body_text_top_spacing</item>
    </style>

    <style name="BodyText.EqualSpacing">
        <item name="android:layout_marginBottom">@dimen/body_text_top_spacing</item>
    </style>

    <style name="ListText" parent="android:TextAppearance.Medium">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>

        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>

        <item name="android:textSize">18sp</item>
    </style>

    <style name="SectionListView">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="TopicHeaderRow">
        <item name="android:drawableBottom">?attr/doz__sectionHeader</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/doz__topicHeaderColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?attr/doz__background</item>
    </style>

    <style name="GuideGridItem">
        <item name="android:background">@color/topic_guide_item_background</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="GuideGridItemThumbnail">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">?attr/doz__imageBorder</item>
    </style>

    <style name="GuideGridItemTitle" parent="android:TextAppearance.Medium.Inverse">
        <item name="android:textColor">?doz__textColorPrimary</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="GuideStepWrap">
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/doz__background</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="GuideStepMediaWrap">
        <item name="android:background">@drawable/step_media_background</item>
        <item name="android:padding">@dimen/page_padding</item>
    </style>

    <style name="GuideStepLinesWrap">
        <item name="android:padding">@dimen/page_padding</item>
        <item name="android:background">?attr/doz__background</item>
    </style>

    <style name="GuideStepLines">
        <item name="android:background">?attr/doz__background</item>
    </style>

    <style name="Thumbnail">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="ThumbnailAddButton">
    </style>

    <style name="ThumbnailContainer">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ThumbnailList">
        <item name="android:paddingLeft">@dimen/guide_image_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GuideMediaMain">
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="GuideCreateItemIcon">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/dozuki_grey</item>
    </style>


    <!-- Slide-Out Menu Drawer -->

    <style name="MenuDrawer"/>

    <style name="MenuDrawer.Widget"/>

    <style name="MenuDrawer.Widget.Category">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/md__category_background</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuDrawer.Widget.Title">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>

        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/menu_list_selector_holo_dark</item>

        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Wizard Form Styling (used in GuideIntroActivity and children fragments) -->

    <style name="WizardPageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="WizardPageTitle">
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">?android:listPreferredItemPaddingLeft</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#ff0099cc</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="WizardPageDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingLeft">?android:listPreferredItemPaddingLeft</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="WizardFormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="WizardFinishTextAppearance">
        <item name="android:color">@color/white</item>
    </style>

    <!-- Custom Theme Styles -->
    <!-- iFixit -->
    <style name="Widget.iFixit"></style>

    <style name="Widget.iFixit.ListViewStyle" parent="Base.ListView">
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="Widget.iFixit.TopicBackground" parent="Widget.iFixit">
        <item name="android:src">@drawable/fist_default</item>
        <item name="android:contentDescription">@string/fist_background_desc</item>
    </style>

    <style name="Widget.iFixit.ActionBar.TabText" parent="Widget.Sherlock.Light.ActionBar.TabText.Inverse">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.iFixit.ActionBar.TabView" parent="Widget.Sherlock.Light.ActionBar.TabView.Inverse">
        <item name="android:background">@drawable/tab_indicator_ifixit</item>
        <item name="background">@drawable/tab_indicator_ifixit</item>
    </style>

    <!-- Dozuki -->
    <style name="Widget.Dozuki"></style>

    <style name="Widget.Dozuki.TopicBackground" parent="Widget.Dozuki">
        <item name="android:src">@drawable/fist_default</item>
        <item name="android:contentDescription">@string/fist_background_desc</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.Dozuki.ActionBar.TabText" parent="Widget.iFixit.ActionBar.TabText"></style>

    <style name="Widget.Dozuki.ActionBar.TabView" parent="Widget.iFixit.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_green</item>
        <item name="background">@drawable/tab_indicator_green</item>
    </style>

    <style name="Widget.Dozuki.ActionBar.TabView.Green" parent="Widget.iFixit.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_green</item>
        <item name="background">@drawable/tab_indicator_green</item>
    </style>

    <style name="Widget.Dozuki.ActionBar.TabView.Orange" parent="Widget.iFixit.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_orange</item>
        <item name="background">@drawable/tab_indicator_orange</item>
    </style>

    <style name="Widget.Dozuki.ActionBar.TabView.Grey" parent="Widget.iFixit.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_grey</item>
        <item name="background">@drawable/tab_indicator_grey</item>
    </style>

    <style name="Widget.Dozuki.ListViewStyle" parent="Base.ListView">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#FFEFEFEF</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="Widget.Dozuki.ListViewStyle.Green" parent="Widget.Dozuki.ListViewStyle">
        <item name="android:listSelector">@drawable/list_selector_green</item>
    </style>

    <style name="Widget.Dozuki.ListViewStyle.Orange" parent="Widget.Dozuki.ListViewStyle">
        <item name="android:listSelector">@drawable/list_selector_orange</item>
    </style>

    <style name="Widget.Dozuki.ListViewStyle.Grey" parent="Widget.Dozuki.ListViewStyle">
        <item name="android:listSelector">@drawable/list_selector_grey</item>
    </style>

</resources>
