<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- Holo Theme Overrides -->
    <style name="Base"/>

    <style name="Base.Dialog" parent="Theme.AppCompat.Light.Dialog">

    </style>

    <style name="Base.Dialog.FullScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorAccent</item>

        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Base.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <style name="GuideIntroButtonBar" parent="Base.Widget.AppCompat.ButtonBar">

    </style>

    <style name="GuideIntroButtonBarButton" parent="Base.Widget.AppCompat.Button.Borderless">

    </style>

    <style name="Base.ButtonBar">
        <item name="android:background">@null</item>
        <item name="android:divider">?android:dividerVertical</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:paddingTop">0dip</item>
    </style>

    <style name="Base.Button" parent="Widget.AppCompat.Button"></style>

    <style name="Base.Button.Borderless" parent="Widget.AppCompat.Button.Borderless"></style>

    <style name="Base.Button.BottomBar" parent="Widget.AppCompat.Button">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Base.Button.Warning" parent="Base.Button">
        <item name="colorAccent">@color/red_5</item>
        <item name="colorControlActivated">@color/red_6</item>
    </style>

    <style name="Base.Button.Icon" parent="Base.Button.Borderless">
        <item name="android:minWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
    </style>

    <style name="Base.Button.Colored" parent="Base.Button"></style>

    <style name="Base.FormField" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Base.Spinner" parent="Widget.AppCompat.Spinner.DropDown">

    </style>

    <style name="TextErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="ListItemThumbnail">
        <item name="android:layout_width">@dimen/list_item_thumbnail_width</item>
        <item name="android:layout_height">@dimen/list_item_thumbnail_height</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:background">@color/image_border</item>
    </style>

    <style name="ItemMenuButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BulletIcon" parent="Base.Button.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="BulletItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitlePageIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>

        <item name="footerColor">?attr/colorPrimary</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?attr/doz__textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?attr/doz__textColorPrimary</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_marginTop">@dimen/body_text_top_spacing</item>
    </style>

    <style name="BodyText.EqualSpacing">
        <item name="android:layout_marginBottom">@dimen/body_text_top_spacing</item>
    </style>

    <style name="EmptyText" parent="BodyText">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ListText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>

        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>

        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DialogTitleDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ListView" parent="Widget.AppCompat.ListView">

    </style>

    <style name="ListView.White" parent="Widget.AppCompat.ListView">

    </style>

    <style name="SectionListView">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="TopicHeaderRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:drawableBottom">?doz__sectionHeader</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TopicHeaderRow.Background">
        <item name="android:background">?doz__background</item>
    </style>

    <style name="TopicHeaderRow.Background.Compat"></style>

    <style name="GuideGridItemThumbnail">
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="GuideGridItemTitle" parent="android:TextAppearance.Medium.Inverse">
        <item name="android:textColor">?doz__textColorPrimary</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="GuideStepWrap">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="GuideStepMediaContainer">
        <item name="android:padding">@dimen/page_padding</item>
        <item name="android:background">?doz__background</item>
    </style>

    <style name="GuideStepLinesContainer">
        <item name="android:padding">@dimen/page_padding</item>
        <item name="android:background">@drawable/top_border_bg</item>
    </style>

    <style name="GuideStepLines">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Thumbnail">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="ThumbnailContainer">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ThumbnailList">
        <item name="android:paddingLeft">@dimen/guide_image_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GuideMediaMain">
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="GuideCreateItemIcon">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/dozuki_grey</item>
    </style>

    <!-- Slide-Out Menu Drawer -->

    <style name="MenuDrawer"/>

    <style name="MenuDrawer.Widget"/>

    <style name="MenuDrawer.Widget.Category">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textSize">14sp</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/md__category_background</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuDrawer.Widget.Category.Compat"></style>

    <style name="MenuDrawer.Widget.Title">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>

        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Wizard Form Styling (used in GuideIntroActivity and children fragments) -->

    <style name="WizardPageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="WizardPageTitle">
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="WizardPageTitle.Compat"/>

    <style name="WizardPageDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="WizardFinishTextAppearance">
        <item name="android:color">@color/white</item>
    </style>

    <!-- Custom Theme Styles -->
    <!-- iFixit -->
    <style name="Widget.iFixit"></style>

    <style name="Widget.iFixit.TopicBackground" parent="Widget.iFixit">
        <item name="android:src">@drawable/fist_default</item>
        <item name="android:contentDescription">@string/fist_background_desc</item>
    </style>

    <!-- Dozuki -->
    <style name="Widget.Dozuki"></style>

    <style name="Widget.Dozuki.TopicBackground" parent="Widget.Dozuki">
        <item name="android:src">@drawable/fist_default</item>
        <item name="android:contentDescription">@string/fist_background_desc</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="NavigationHeader">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="CardListItem">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="CardListItemInner">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/list_item_ripple</item>
    </style>

</resources>
