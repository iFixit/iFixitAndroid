<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Custom Theme Styles -->


    <!-- iFixit -->
    <style name="Widget.iFixit"></style>

    <style name="Widget.iFixit.ListViewStyle" parent="android:Widget.ListView">
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="Widget.iFixit.TopicBackground" parent="Widget.iFixit">
        <item name="android:src">@drawable/fist_default</item>
        <item name="android:contentDescription">@string/fist_background_desc</item>
    </style>

    <style name="Widget.iFixit.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">

        <!--
        <item name="background">@color/ifixit_blue</item>
        <item name="android:background">@color/ifixit_blue</item>
        -->
        <item name="titleTextStyle">@style/TextAppearance.iFixit.ActionBar.Title</item>
    </style>

    <style name="Widget.iFixit.ActionBar.TabText" parent="Widget.Sherlock.Light.ActionBar.TabText.Inverse">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.iFixit.ActionBar.TabView" parent="Widget.Sherlock.Light.ActionBar.TabView.Inverse">
        <item name="android:background">@drawable/tab_indicator_ifixit</item>
        <item name="background">@drawable/tab_indicator_ifixit</item>
    </style>

    <style name="TextAppearance.iFixit.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Dozuki -->
    <style name="Widget.Dozuki"></style>

    <style name="Widget.Dozuki.TopicBackground" parent="Widget.Dozuki">
        <item name="android:src">@drawable/fist_default</item>
        <item name="android:contentDescription">@string/fist_background_desc</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.Dozuki.ActionBar" parent="Widget.iFixit.ActionBar"></style>

    <style name="Widget.Dozuki.ActionBar.TabText" parent="Widget.iFixit.ActionBar.TabText"></style>

    <style name="TextAppearance.Dozuki.ActionBar.Title" parent="TextAppearance.iFixit.ActionBar.Title"></style>

    <style name="Widget.Dozuki.ActionBar.TabView" parent="Widget.iFixit.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_green</item>
        <item name="background">@drawable/tab_indicator_green</item>
    </style>

    <style name="Widget.Dozuki.ActionBar.TabView.Green" parent="Widget.iFixit.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_green</item>
        <item name="background">@drawable/tab_indicator_green</item>
    </style>

    <style name="Widget.Dozuki.ActionBar.TabView.Orange" parent="Widget.iFixit.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_orange</item>
        <item name="background">@drawable/tab_indicator_orange</item>
    </style>

    <style name="Widget.Dozuki.ActionBar.TabView.Grey" parent="Widget.iFixit.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_grey</item>
        <item name="background">@drawable/tab_indicator_grey</item>
    </style>

    <style name="Widget.Dozuki.ListViewStyle" parent="android:Widget.ListView">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#FFDDDDDD</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="Widget.Dozuki.ListViewStyle.Green" parent="Widget.Dozuki.ListViewStyle">
        <item name="android:listSelector">@drawable/list_selector_green</item>
    </style>

    <style name="Widget.Dozuki.ListViewStyle.Orange" parent="Widget.Dozuki.ListViewStyle">
        <item name="android:listSelector">@drawable/list_selector_orange</item>
    </style>

    <style name="Widget.Dozuki.ListViewStyle.Grey" parent="Widget.Dozuki.ListViewStyle">
        <item name="android:listSelector">@drawable/list_selector_grey</item>
    </style>

    <style name="Holo.DialogWindowTitle.Dozuki">
        <item name="android:textAppearance">@style/Holo.TextAppearance.DialogWindowTitle.Dozuki</item>
    </style>

    <style name="Holo.TextAppearance.DialogWindowTitle.Dozuki">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dozuki_red</item>
    </style>

    <style name="Theme.iFixit" parent="Holo.Theme.Light.DarkActionBar">

        <!-- Action Bar Logo -->
        <item name="logo">@drawable/logo_ifixit</item>
        <item name="android:logo">@drawable/logo_ifixit</item>

        <!-- Action Bar Sherlock overrides -->
        <item name="actionBarTabTextStyle">@style/Widget.iFixit.ActionBar.TabText</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.iFixit.ActionBar.TabText</item>
        <item name="android:actionBarStyle">@style/Widget.iFixit.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.iFixit.ActionBar</item>
        <item name="actionBarTabStyle">@style/Widget.iFixit.ActionBar.TabView</item>
        <item name="android:actionBarTabStyle">@style/Widget.iFixit.ActionBar.TabView</item>

        <!-- Custom Attributes / Styles -->
        <item name="topicHeaderColor">@color/ifixit_blue</item>
        <item name="listViewStyle">@style/Widget.iFixit.ListViewStyle</item>
        <!-- Override for SectionHeader ListView style -->
        <item name="sectionListViewStyle">@style/Widget.iFixit.ListViewStyle</item>
        <item name="topicDefaultBackground">@style/Widget.iFixit.TopicBackground</item>
    </style>

    <style name="Theme.Dozuki" parent="Holo.Theme.Light.DarkActionBar">

        <!-- Action Bar Logo -->
        <item name="logo">@drawable/logo_dozuki</item>
        <item name="android:logo">@drawable/logo_dozuki</item>

        <!-- Action Bar Sherlock overrides -->
        <item name="actionBarTabTextStyle">@style/Widget.Dozuki.ActionBar.TabText</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.Dozuki.ActionBar.TabText</item>
        <item name="actionBarStyle">@style/Widget.Dozuki.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Dozuki.ActionBar</item>
        <item name="actionBarTabStyle">@style/Widget.Dozuki.ActionBar.TabView</item>
        <item name="android:actionBarTabStyle">@style/Widget.Dozuki.ActionBar.TabView</item>
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
        <item name="android:homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>

        <!-- Custom Attributes / Styles for Dozuki -->
        <item name="listViewStyle">@style/Widget.Dozuki.ListViewStyle</item>

        <!-- Override for SectionHeader ListView style -->
        <item name="sectionListViewStyle">@style/Widget.Dozuki.ListViewStyle</item>
        <item name="topicHeaderColor">@color/dozuki_green</item>
        <item name="topicGuideList">@style/Widget.Dozuki.ListViewStyle</item>
        <item name="topicDefaultBackground">@style/Widget.Dozuki.TopicBackground</item>
        <item name="android:dialogTheme">@style/Theme.Dozuki.Dialog</item>
    </style>

    <style name="Theme.Dozuki.Dialog">
        <item name="android:windowTitleStyle">@style/Holo.DialogWindowTitle.Dozuki</item>
    </style>

    <!-- Custom Attributes / Styles for Dozuki -->
    <style name="Theme.Dozuki.Green" parent="Theme.Dozuki">
        <item name="topicHeaderColor">@color/dozuki_green</item>
