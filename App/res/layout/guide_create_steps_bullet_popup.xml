<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dark"
    android:orientation="vertical" >

<TableLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp" >

                <ImageView
                    android:id="@+id/bullet_dialog_color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bullet_black" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/bullet_dialog_color_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bullet_red" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/bullet_dialog_color_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bullet_orange" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp" >

                <ImageView
                    android:id="@+id/bullet_dialog_color_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bullet_yellow" />

            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp" >

                <ImageView
                    android:id="@+id/bullet_dialog_color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bullet_white" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/bullet_dialog_color_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bullet_blue" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/bullet_dialog_color_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bullet_purple" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/bullet_dialog_color_teal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bullet_teal" />

            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp" >

                <ImageView
                    android:id="@+id/bullet_dialog_caution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dialog_bullet_caution" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp">

                <ImageView
                     android:id="@+id/bullet_dialog_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dialog_bullet_note_light" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp">

                <ImageView
                     android:id="@+id/bullet_dialog_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dialog_bullet_reminder_light" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp" >

            </FrameLayout>
        </TableRow>
            </TableLayout>

 <LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical" >

            <TextView
                android:id="@+id/bullet_dialog_indent"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_dialog_indent"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Indent bullet"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/bullet_dialog_unindent"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_dialog_unindent"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="Unindent bullet"
                 android:textColor="@color/white" />
       
            <TextView
                android:id="@+id/bullet_dialog_rearrange"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_dialog_arrange_bullets_light"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="Rearrange bullets"
                 android:textColor="@color/white" />

     

            <TextView
                android:id="@+id/bullet_dialog_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cancel"
                 android:textColor="@color/white"  />

</LinearLayout>    
    </LinearLayout>