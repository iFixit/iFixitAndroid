<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/thumbnail_orientation">

    <ImageView
        android:id="@+id/thumbnail_1"
        android:layout_width="@dimen/guide_thumbnail_width"
        android:layout_height="@dimen/guide_thumbnail_height"
        android:background="@color/image_border"
        android:visibility="invisible"
        android:contentDescription="@string/thumbnail_desc" 
        style="@style/guide_thumbnail_w_spacing" />

    <ImageView
        android:id="@+id/thumbnail_2"        
        android:layout_width="@dimen/guide_thumbnail_width"
        android:layout_height="@dimen/guide_thumbnail_height"
        android:background="@color/image_border"
        android:visibility="invisible"
        android:contentDescription="@string/thumbnail_desc" 
        style="@style/guide_thumbnail_w_spacing" />

    <ImageView
        android:id="@+id/thumbnail_3"
        android:layout_width="@dimen/guide_thumbnail_width"
        android:layout_height="@dimen/guide_thumbnail_height"
        android:background="@color/image_border"
        android:visibility="invisible"
        android:contentDescription="@string/thumbnail_desc" 
        style="@style/guide_thumbnail" />

</LinearLayout>
