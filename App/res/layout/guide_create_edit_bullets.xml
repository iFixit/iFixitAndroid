<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:gravity="center_horizontal" >

    <ListView
        android:id="@+id/steps_portal_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:divider="@color/white"
        android:dividerHeight="@dimen/topic_list_vertical_spacing"
        android:padding="3dp" />
    
    
    <LinearLayout
        android:id="@+id/edit_step_bullet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
    <ImageButton
        android:id="@+id/add_new_bullet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_btn_add_bullet"
        android:contentDescription="@string/topic_guide_thumbnail"
        android:padding="1dp"/>
    
   </LinearLayout>

    <FrameLayout
        android:id="@+id/guide_create_edit_bullet_reorder_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>