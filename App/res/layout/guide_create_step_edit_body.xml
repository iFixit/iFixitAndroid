<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/step_edit_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/step_edit_top_bar"
        android:text="Untitled" />

    <LinearLayout
        android:id="@+id/step_edit_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/step_edit_bottom_bar"
        android:layout_below="@+id/step_edit_title_text"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/step_edit_image_holder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/step_edit_large_image"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="25dp"
                android:background="@color/image_border"
                android:contentDescription="@string/topic_guide_thumbnail"
                android:padding="1dp"
                android:src="@drawable/ic_placeholder_feature_img" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/step_edit_thumb_1"
                    android:layout_width="@dimen/guide_micro_thumbnail_width"
                    android:layout_height="@dimen/guide_micro_thumbnail_height"
                    android:layout_margin="2dp"
                    android:background="@color/image_border"
                    android:contentDescription="@string/topic_guide_thumbnail"
                    android:padding="1dp"
                    android:src="@drawable/ic_btn_add_gallery_image" />

                <ImageView
                    android:id="@+id/step_edit_thumb_2"
                    android:layout_width="@dimen/guide_micro_thumbnail_width"
                    android:layout_height="@dimen/guide_micro_thumbnail_height"
                    android:layout_margin="2dp"
                    android:background="@color/image_border"
                    android:contentDescription="@string/topic_guide_thumbnail"
                    android:padding="1dp"
                    android:src="@drawable/ic_btn_add_gallery_image" />

                <ImageView
                    android:id="@+id/step_edit_thumb_3"
                    android:layout_width="@dimen/guide_micro_thumbnail_width"
                    android:layout_height="@dimen/guide_micro_thumbnail_height"
                    android:layout_margin="2dp"
                    android:background="@color/image_border"
                    android:contentDescription="@string/topic_guide_thumbnail"
                    android:padding="1dp"
                    android:src="@drawable/ic_btn_add_gallery_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_btn_add_gallery_image"
                    android:text="-OR-"
                    android:textColor="@color/image_border" />

                <ImageView
                    android:id="@+id/step_edit_thumb_media"
                    android:layout_width="@dimen/guide_micro_thumbnail_width"
                    android:layout_height="@dimen/guide_micro_thumbnail_height"
                    android:layout_margin="2dp"
                    android:background="@color/image_border"
                    android:contentDescription="@string/topic_guide_thumbnail"
                    android:padding="1dp"
                    android:src="@drawable/ic_btn_add_gallery_media" />
            </LinearLayout>
        </LinearLayout>

        <com.mobeta.android.dslv.DragSortListView
            android:id="@+id/steps_portal_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:divider="@color/white"
            android:dividerHeight="@dimen/topic_list_vertical_spacing"
            android:padding="3dp" />
    </LinearLayout>

</RelativeLayout>