<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/doz__background">

    <TextView
        android:id="@+id/loading_text"
        style="@style/BodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loading_fragment_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/loading_fragment_text_margin_bottom"
        android:text="@string/loading" />

    <ProgressBar
        android:id="@+id/loading_fragment_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:minHeight="@dimen/progress_bar_width_height"
        android:minWidth="@dimen/progress_bar_width_height" />

</RelativeLayout>