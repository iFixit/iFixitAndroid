<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/site_list_background"
        android:scaleType="centerCrop"
        android:src="@drawable/dozuki_workbench" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dozuki_splash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/site_list_image_description"
            android:scaleType="center"
            android:src="@drawable/dozuki_splash_logo" />

        <com.dozuki.ifixit.dozuki.ui.SiteListOffsetButton
            android:id="@+id/list_dialog_btn"
            android:layout_width="@dimen/site_list_button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/site_button_states"
            android:text="@string/site_list_button"
            android:textColor="#454545"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>