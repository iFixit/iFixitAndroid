<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/step_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100" >

    <ImageView
        android:id="@+id/bullet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:contentDescription="@string/bullet_desc"
        android:cropToPadding="true"
        android:paddingRight="@dimen/step_bullet_padding"
        android:paddingTop="@dimen/step_bullet_padding" />

    <TextView
        android:id="@+id/step_text"
        style="@style/text.body.no_spacing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="97" />

    <ImageView
        android:id="@+id/bullet_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/step_icon_left_spacing"
        android:layout_marginTop="@dimen/step_icon_top_spacing"
        android:layout_weight="0"
        android:contentDescription="@string/bullet_icon_desc"
        android:visibility="invisible" />

</LinearLayout>