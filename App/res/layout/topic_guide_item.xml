<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/topic_grid_box"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="4dp"
      android:layout_marginLeft="4dp"
      android:padding="1dp"
      android:background="@color/gray">
   <RelativeLayout
         android:background="@drawable/border"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="4dp">

      <ImageView
            android:id="@+id/topic_guide_thumbnail"
            android:layout_width="@dimen/guide_thumbnail_width"
            android:layout_height="@dimen/guide_thumbnail_height"
            android:padding="1dp"
            android:layout_marginRight="8dp"
            android:background="@color/image_border"
            android:contentDescription="@string/topic_guide_thumbnail"/>

      <TextView
            android:id="@+id/topic_guide_title"
            android:layout_toRightOf="@+id/topic_guide_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
   </RelativeLayout>
</RelativeLayout>
