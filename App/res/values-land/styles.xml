<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="GuideStepWrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="GuideStepMediaWrap">
        <item name="android:background">@drawable/step_media_background</item>
        <item name="android:padding">@dimen/page_padding</item>
    </style>

    <style name="GuideStepLinesWrap">
        <item name="android:paddingTop">@dimen/page_padding</item>
        <item name="android:paddingRight">@dimen/page_padding</item>
        <item name="android:paddingBottom">@dimen/page_padding</item>
        <item name="android:paddingLeft">8dp</item>

        <item name="android:background">?attr/doz__background</item>
    </style>

    <style name="GuideMediaMain">
        <item name="android:layout_marginRight">@dimen/guide_image_spacing</item>
        <item name="android:layout_marginBottom">@dimen/guide_image_spacing</item>
    </style>

    <style name="GuideStepLines">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThumbnailContainer">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ThumbnailList">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Thumbnail">
        <item name="android:background">@color/image_border</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

</resources>
