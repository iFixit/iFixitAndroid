<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.ifixit.android.ifixit"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8"
              android:targetSdkVersion="13" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:name="com.ifixit.android.ifixit.MainApplication" 
                 android:icon="@drawable/icon" 
                 android:label="@string/app_name" 
                 android:logo="@drawable/logo">
        <activity android:name="com.ifixit.android.ifixit.MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ifixit.android.ifixit.DeviceViewActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name="com.ifixit.android.ifixit.GuideView"
                  android:label="@string/app_name">
        </activity>
        <activity android:name="com.ifixit.android.ifixit.FullImageView"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.NoActionBar">
        </activity>
    </application>
</manifest>
